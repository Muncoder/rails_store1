<% if @order_form.has_errors? %>
	<div class="panel panel-danger">
		<div class="panel-title">We have found some problems with your data. Please review them.</div>
		<div class="panel-body">
			<%= @order_form.user.errors.full_messages do |error| %>
				<strong> User : </strong> <%= error %>
			<% end %>
		</div>
	</div>
	
<% end %>